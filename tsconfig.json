{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "allowJs": true,
        "module": "CommonJS",
        "target": "ESNext",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/"
    }
}